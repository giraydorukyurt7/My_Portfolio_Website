@model Experience
@{
    ViewData["Title"] = "CreateExperience";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Experiences</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Experience Adding Page</div>
					</div>
					<div class="card-body">
						
						<form method="post">
							<label>Experience Company Info</label>
							<input type="text" asp-for="Head" class="form-control" />
							<br />

							<label>Experience Title</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />

							<label>Experience Date Interval</label>
							<input type="text" asp-for="Date" class="form-control" />
							<br />

							<label>Experience Description</label>
							<textarea rows="4" class="form-control" asp-for="Description"></textarea>
							<br />

							<button class="btn btn-primary">ADD EXPERIENCE</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

